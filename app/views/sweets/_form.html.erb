<%= form_for(@sweet) do |f| %> 
  <%= link_to "スィーツ一覧画面にもどる", sweets_path %> 
<% end %>
<br>

<%= form_for(@sweet, url: choose_new_or_edit) do |f| %>
  <% if @sweet.errors.any? %>

    <div id="error_explanation">
      <h3><%= @sweet.errors.count %>件のエラーがあります。</h3>
      <% @sweet.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
      <br>
    </div>
    <br>
  <% end %>

  <!--<%= f.label :スィーツ情報を140字以内で入力して下さい %>-->
  <%= f.text_field :content, class:'form-control' %>
  <br>
  <%= f.submit '投稿', class:'btn btn-primary btn-block' %>

<% end %>
